<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name-"viewport" content="width=device-width , inital-scale=1">
    <title>게시판</title>
    <link rel="stylesheet" href="../css/bootstrap.css">
  </head>
  
  
      <body>
      <div class="container" style=" margin-top: 100px;">
        <div class="input-group input-group-sm" role="group" aria-label="...">
            <h2>글</h2>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th width="30%">글쓴이</th>
              <td width="70%"><%= @board.user%></td>
            </tr>
            <tr>
              <th style="padding-top: 15px">제목</th>
              <td><%= @board.title %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="2">
                  
                <textarea class="form-control" rows="20" name="content" disabled>  <%= @board.content%> </textarea>
              </td>
            </tr>
            
          </tbody>
        </table>
      
      
      <input type="button" value="수정" onclick="getValue();" class="btn btn-outline-danger"/>   
<input type="button" value="삭제" onclick="getValue2();" class="btn btn-outline-danger"/>      
<a href ="/board/index"><input type="button" value="홈으로" onclick="getValue3();" class="btn btn-outline-danger"/>   </a>   
<input type="hidden" id="password" value="<%= @board.password %>"/>   
<input type="hidden" id="board_id" value="<%= @board.id %>"/> 
      
      </div>
      
      
      


<script type="text/javascript">              
    function getValue(){               
    var password = document.getElementById('password').value;              
    var board_id = document.getElementById('board_id').value;               
    var retVal = prompt("비밀번호를 입력하세요.");               
    if (password == retVal){                   
    location.href="/board/"+board_id+"/edit";               
    }else{                 
    alert("비밀번호가 일치하지 않습니다.")               
    }            
    }                       
    function getValue2(){              
    var password = document.getElementById('password').value;              
    var board_id = document.getElementById('board_id').value;               
    var retVal = prompt("비밀번호를 입력하세요.");               
    if (password == retVal){                   
    location.href="/board/"+board_id+"/delete";               
    }else{                  
    alert("비밀번호가 일치하지 않습니다.")               
    }            
    }  
</script>
      </div>
  </body>
</html>







